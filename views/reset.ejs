<%- include("./partials/header") %>

<div class="reset">
    <h1 id="resetH1">Enter New Password</h1>

    <form action="/reset/<%= token %>" method="POST">
        <div class="form-group row">
            <label for="loginPassword">Password</label>
            <input class="form-control" type="password" name="password" placeholder="password" id="loginPassword" />
        </div>
        <div class="form-group row">
            <label for="confirm">Confirm Password</label>
            <input class="form-control" type="password" name="confirm" placeholder="confirm password"
                id="loginPassword" />
        </div>
        <div class="form-group row">
            <input type="submit" class="btn btn-primary btn-block" value="Save">
        </div>
    </form>
</div>
<%- include("./partials/footer") %>