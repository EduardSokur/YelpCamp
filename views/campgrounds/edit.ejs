<%- include("../partials/header") %>

<div class="container">

    <h1 id="newCampH1">Edit <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group row">
            <label for="newCampgroundNameInput">Name</label>
            <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]"
                id="newCampgroundNameInput">
        </div>
        <div class="form-group row">
            <label for="newCampgroundDescriptionInput">Description</label>
            <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]"
                id="newCampgroundDescriptionInput">
        </div>
        <div class="form-group row">
            <label for="newCampgroundDescriptionInput">Price</label>
            <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]"
                min="0.01" step="0.01" id="newCampgroundPriceInput">
        </div>
        <div class="form-group row">
            <label for="newCampgroundUrlInput">URL</label>
            <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]"
                id="newCampgroundUrlInput">
        </div>
        <h3 id="newCampLocationH3">Location</h3>
        <div class="form-group row">
            <label for="newCampgroundDescriptionInput">Street</label>
            <input class="form-control" type="text" placeholder="Champ de Mars" value="<%= campground.location.street %>" name="campground[location.street]">
        </div>
        <div class="form-group row">
            <label for="newCampgroundDescriptionInput">Building number</label>
            <input class="form-control" type="text" placeholder="5" value="<%= campground.location.building %>" name="campground[location.building]">
        </div>
        <div class="form-group row">
            <label for="newCampgroundDescriptionInput">City</label>
            <input class="form-control" type="text" placeholder="Paris"  value="<%= campground.location.city %>" name="campground[location.city]">
        </div>
        <div class="form-group row">
            <label for="newCampgroundDescriptionInput">Country</label>
            <input class="form-control" type="text" placeholder="France"  value="<%= campground.location.country %>" name="campground[location.country]">
        </div>
        <div class="form-group row">
            <label for="newCampgroundDescriptionInput">Postal Code</label>
            <input class="form-control" type="text" placeholder="75007"  value="<%= campground.location.postalCode %>" name="campground[location.postalCode]">
        </div>
        <div class="form-group row">
            <button class="btn btn-primary btn-block">Submit</button>
        </div>
        <div class="form-group row">
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-danger btn-block">Cancel</a>
        </div>
</div>
</form>

</div>
<%- include("../partials/footer") %>