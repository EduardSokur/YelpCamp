<%- include("./partials/header") %>

<div class="signUp">
    <h1 id="signUp">Sign up!</h1>

    <form action="/register" method="POST">
        <div class="form-group row">
            <label for="loginUserName">Username</label>
            <input class="form-control" type="text" name="user[username]" placeholder="username" id="loginUserName">
        </div>
        <div class="form-group row">
            <label for="loginUserName">First Name</label>
            <input class="form-control" type="text" name="user[firstName]" placeholder="Max" id="loginFirstName">
        </div>
        <div class="form-group row">
            <label for="loginUserName">Last Name</label>
            <input class="form-control" type="text" name="user[lastName]" placeholder="Mustermann" id="loginLastName">
        </div>
        <div class="form-group row">
            <label for="loginEmail">Email</label>
            <input class="form-control" type="email" name="user[email]" placeholder="max.mustermann@gmx.com"
                id="loginEmail">
        </div>
        <div class="form-group row">
            <label for="loginEmail">Profile Image</label>
            <input class="form-control" type="text" name="user[avatar]" placeholder="IMG URL" id="loginAvatar">
        </div>
        <div class="form-group row">
            <label for="loginPassword">Password</label>
            <input class="form-control" type="password" name="user[password]" placeholder="password" id="loginPassword">
        </div>
        <!-- <div class="form-group row">
            <label for="loginAdminCode">Code</label>
            <input class="form-control" type="password" name="adminCode" placeholder="Admin code" id="loginAdminCode">
        </div> -->
        <div class="form-group row">
            <input class="btn btn-primary btn-block" type="submit" value="Sign up!">
        </div>
        <div class="form-group row">
            <a href="/campgrounds/" class="btn btn-danger btn-block">Cancel</a>
        </div>
    </form>
</div>

<%- include("./partials/footer") %>